{
  "name": "Sample OpenID project",
  "description": "Sample project connecting to OpenID provider",
  "repository": "https://github.com/Deauthorized/rails-5.1-openid-sample",
  "keywords": [
    "Ruby",
    "Rails",
    "OpenID"
  ],
  "env": {
    "OPENID_CLIENT_ID": {
      "description": "Client ID registered on OpenID provider",
      "value": "deauthorized"
    },
    "OPENID_CLIENT_SECRET": {
      "description": "Client secret provided from OpenID provider",
      "value": "123"
    },
    "OPENID_HOST": {
      "description": "OpenID provider hostname",
      "value": "srv.qryp.to"
    },
    "OPENID_PORT": {
      "description": "OpenID provider port number",
      "value": "443"
    },
    "OPENID_ISSUER": {
      "description": "OpenID issuer URL",
      "value": "https://srv.qryp.to/op"
    }
  },
  "image": "heroku/ruby"
}
